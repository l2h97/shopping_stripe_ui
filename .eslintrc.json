{
  "root": true,
  "parserOptions": {
    "project": "tsconfig.json"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended",
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "ignorePatterns": ["**/*.js", "node_modules/**", "dist/**"],
  "rules": {
    "prettier/prettier": "warn"
  }
}
